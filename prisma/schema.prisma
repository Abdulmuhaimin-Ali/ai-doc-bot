datasource db {
  provider = "sqlite"
   DATABASE_URL="file:./dummy.db"
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}



// ----------- MODELS -----------

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())

  posts     Post[]
  sessions  Session[]
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())

  user      User      @relation(fields: [userId], references: [id])
  userId    Int
}

model Session {
  id         Int       @id @default(autoincrement())
  token      String    @unique
  createdAt  DateTime  @default(now())
  expiresAt  DateTime

  user       User      @relation(fields: [userId], references: [id])
  userId     Int
}